<div class="post-list">
  {{#each posts as |post|}}
  <div>
    <article class="post">
      <div class="title">
        <strong> {{post.title}}</strong> by {{post.user.username}} on {{post.created_at}}
      </div>
      <div class="meta">
        {{post.content}}
        |
        <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
      </div>
    </article>
  </div>
  {{/each}}
</div>